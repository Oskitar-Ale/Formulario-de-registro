<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); -%>

    <body class="">
        <div class="container">
            <br><br>
            <form class="row g-3">

                <br>
                <br>
                <div>
                    <div class="d-flex justify-content-between mb-5">

                        <h2>Lista de estudiantes </h2>
                        <button type="button" class="btn  btn-success" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop">
                            agregar nuevo estudiante
                        </button>
                    </div>
                    <table class="table table-hover" id="TablaEstudiantes">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>DNI</th>
                                <th>Celular</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let counter = 1; %>
                            <% data.forEach(student => { %>
                            <tr>
                                <td><%= counter %></td>
                                <td><%= student.nombre %></td>
                                <td><%= student.apellidos %></td>
                                <td><%= student.dni %></td>
                                <td><%= student.celular %></td>
                                <td><%= student.email %></td>
                                <td>
                                    <a href="/panel/delete/<%= dni %>" class="btn btn-danger">delete</a>
                                </td>
                                <td>
                                    <a type="button" class="btn btn-secondary">edit</a>
                                </td>
                                <% counter++ %>
                                <% }) %>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>


        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="/panel" method="POST">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">TÃ­tulo del modal</h5>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="" class="form-label">Documento de indetidad</label>
                                <input type="number" class="form-control" name="dni" id="lbdni" >
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Nombres</label>
                                <input type="text" class="form-control" name="nombre" id="lbnombre" autofocus>
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Apellidos</label>
                                <input type="text" class="form-control" name="apellidos" id="lbapellidos" >
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Correo</label>
                                <input type="email" class="form-control" name="email" id="lbmail" >
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Numero celular</label>
                                <input type="number" class="form-control" name="celular" id="lbcel" >
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- <script src="/js/negocio.js" type="text/javascript"></script>
    <script src="/js/logico.js" type="text/javascript"></script> -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>

    </body>

</html>